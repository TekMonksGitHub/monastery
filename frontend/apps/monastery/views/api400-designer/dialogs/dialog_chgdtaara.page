.grid-container-extension {
    height: 100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    padding: 10px 20px 0px 20px;
    display: flex;
    flex-flow: row;
    box-sizing: border-box;
}

.grid-item-extension > input, .grid-item-extension > input:focus{
    width: 100%;
    border-radius: 4px;
    border: 0px;
    outline: none;
    padding: 12px;
    resize: none;
    height:8px;
    font-family: inherit;
}

